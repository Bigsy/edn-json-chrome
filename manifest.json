{
  "icons": {
    "16": "icons/edn16.png",
    "48": "icons/edn48.png", 
    "128": "icons/edn128.png"
  },
  "manifest_version": 3,
  "name": "EDN to JSON Converter",
  "version": "1.0",
  "description": "Convert between EDN and JSON formats",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["/lib/*"],
    "matches": ["<all_urls>"]
  }]
}
